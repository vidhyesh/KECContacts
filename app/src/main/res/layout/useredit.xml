<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/kcl4"
    tools:context=".UserEdit">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eupdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/slist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Staff Id"
                android:textColor="#0000ff" />

            <EditText
                android:id="@+id/esid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:hint="Staff id"
                android:inputType="text"
                android:textColor="#ff00ff" />

            <TextView
                android:id="@+id/textt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Staff Name"
                android:textColor="#0000ff" />

            <EditText
                android:id="@+id/esname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:hint="Staff Name"
                android:inputType="text"
                android:textColor="#ff00ff" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textColor="#0000ff" />

            <EditText
                android:id="@+id/esmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mobile No."
                android:inputType="phone"
                android:textColor="#ff00ff" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail id"
                android:textColor="#0000ff" />

            <EditText
                android:id="@+id/esmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mail id"
                android:inputType="textEmailAddress"
                android:textColor="#ff00ff" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/eupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="UPDATE"
        android:textColor="#0000FF"
        android:textSize="20sp" />

</RelativeLayout>
